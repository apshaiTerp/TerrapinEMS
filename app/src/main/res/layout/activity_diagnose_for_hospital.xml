                    android:layout_below="@+id/hospText2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="5dp"
                    android:paddingLeft="5dp"
                    android:textSize="24sp"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="10:21"
                    android:id="@+id/hospETAText2"
                    android:layout_below="@+id/hospText2"
                    android:layout_toRightOf="@+id/etaLabelText2"
                    android:layout_toEndOf="@+id/etaLabelText2"
                    android:layout_margin="5dp"
                    android:paddingLeft="15dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/hospital_distance_label"
                    android:id="@+id/distLabelText2"
                    android:textSize="24sp"
                    android:visibility="invisible"
                    android:paddingLeft="55dp"
