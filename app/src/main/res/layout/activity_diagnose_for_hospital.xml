                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="6.2 mi"
                    android:id="@+id/distText2"
                    android:layout_below="@+id/hospText2"
                    android:layout_toRightOf="@+id/distLabelText2"
                    android:layout_toEndOf="@+id/distLabelText2"
                    android:layout_margin="5dp"
                    android:textSize="24sp"
                    android:paddingLeft="15dp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

            </RelativeLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select\nHospital"
                android:id="@+id/hospButton3"
                android:layout_margin="5dp"
                android:textSize="30sp"
                android:visibility="invisible"
                android:background="#14d902"
                android:height="94dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_span="3"
                android:layout_marginTop="10dp"
                android:id="@+id/relativeHosp3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Here is the hospital name.... and some more"
                    android:id="@+id/hospText3"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="30sp"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    android:ellipsize="none"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/hospital_eta_label"
                    android:id="@+id/etaLabelText3"
                    android:layout_below="@+id/hospText3"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="5dp"
                    android:paddingLeft="5dp"
                    android:textSize="24sp"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="10:21"
                    android:id="@+id/hospETAText3"
                    android:layout_below="@+id/hospText3"
                    android:layout_toRightOf="@+id/etaLabelText3"
                    android:layout_toEndOf="@+id/etaLabelText3"
                    android:layout_margin="5dp"
                    android:paddingLeft="15dp"
